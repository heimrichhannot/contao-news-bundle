<div class="{{ 'layout_full block ' ~ cssClass|trim }}" itemscope itemtype="http://schema.org/Article">

    <!-- indexer::stop -->
    {# Hint: create an tl_reader_config_element of type navigation with name navigation or custom name and rename the twig attribute below#}
    {% if navigation|default() %}
        {{ navigation|raw }}
    {% endif %}
    <!-- indexer::continue -->

    <h1 itemprop="name">{{ newsHeadline }}</h1>

    <p class="info">
        <time datetime="{{ datetime }}" itemprop="datePublished">{{ date }}</time> {{ author ~ ' ' ~ commentCount| trim }}
    </p>

    {% if(hasSubHeadline|default()) %}
        <h2>{{ subHeadline }}</h2>
    {% endif %}

    {% if hasText|default() %}
        {{ text|raw }}
    {% else %}
        <div class="ce_text block">
            {% if singleSRC|default() and not singleSRC.addBefore %}
                {{ teaser }}
            {% endif %}
            {% if singleSRC|default() %}
                {{ include('@HeimrichHannotContaoUtils/image.html.twig', singleSRC|merge({'href': detailsUrl})) }}
            {% endif %}
            {% if singleSRC|default() and singleSRC.addBefore %}
                {{ teaser }}
            {% endif %}
        </div>
    {% endif %}

    {% if enclosures|default %}
        <div class="enclosure">
            <ul>
                {% for enclosure in enclosures %}
                    <li class="download-element ext-{{ enclosure.extension }}">
                        <a href="{{ enclosure.href }}" title="{{ enclosure.title }}">{{ enclosure.link }}<span class="size">({{ enclosure.filesize }}</span></a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
</div>
